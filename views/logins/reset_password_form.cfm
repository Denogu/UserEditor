<div class="row" id="form_div">
  <div class="col-sm-6">
    <form name="reset_password_form" action="reset_password">
      <h2>Reset Password</h2>
      <p>Complete this form and we will send you a temporary link to update your password.</p>

      <div class="form-group reset-password-group">
        <label for="user_name">Username</label>
        <input class="form-control" pattern=".{3,}" maxlength="50" type="text" required="true" name="user_name" id="user_name">
        <br />
      </div>
      <div class="form-group">   
        <label for="email">E-mail</label>
        <input class="form-control" maxlength="50" type="email" required="true" name="email" id="email">
      </div>

      <div id="error_message_div"></div>

      <input type="submit" name="submit_button" class="btn btn-primary btn-lg" value="Send">
      <a class="btn-link" href="login_form" id="reset_password_cancel_link">Cancel</a>
    </form>
  </div>
</div>